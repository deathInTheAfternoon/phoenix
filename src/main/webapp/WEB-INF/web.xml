<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Phoenix Member Service</display-name>
  
  <!-- RESTEasy is implemented as a ServletContextListener and a Servlet -->
  <!-- This listens for changes in the application context (e.g. loaded or removed the webapp). It init's RestEasy and scans for annotated classes in the WAR file. -->
  <listener>
	<listener-class>
	    org.jboss.resteasy.plugins.server.servlet.ResteasyBootstrap
	</listener-class>
  </listener>
  <!-- The docs say this listner must be loaded after RestEasyBootstrap if using Spring integration. -->
  <listener>
	  <listener-class>
	  	org.jboss.resteasy.plugins.spring.SpringContextLoaderListener
	  </listener-class>
  </listener>
  
  <!-- This is servlet that does all the request processing work. -->
  <servlet>
        <servlet-name>rest4endeavour</servlet-name>
        <servlet-class>
            org.jboss.resteasy.plugins.server.servlet.HttpServletDispatcher
        </servlet-class>
    </servlet>
    <servlet-mapping>
  <!-- This maps the URI to the RESTEasy servlet -->
	<servlet-name>rest4endeavour</servlet-name>
	<url-pattern>/*</url-pattern>
    </servlet-mapping>
</web-app>
